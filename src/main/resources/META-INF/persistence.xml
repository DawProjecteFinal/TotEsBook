<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="totesbookPersistenceUnit" transaction-type="JTA">
        
        <!-- JNDI DataSource configurat a GlassFish -->
        <jta-data-source>jdbc/TotEsBookDS</jta-data-source>

        <!-- TOTES les entitats gestionades -->
        <class>cat.totesbook.domain.Agent</class>
        <class>cat.totesbook.domain.Biblioteca</class> 
        <class>cat.totesbook.domain.Llibre</class>
        <class>cat.totesbook.domain.Prestec</class>
        <class>cat.totesbook.domain.PropostaAdquisicio</class>
        <class>cat.totesbook.domain.Reserva</class>
        <class>cat.totesbook.domain.Rol</class>
        <class>cat.totesbook.domain.SessioUsuari</class>
        <class>cat.totesbook.domain.Usuari</class>

        <properties>
            <!-- CORRECCIÓ 1: Indicar a JPA que NO gestioni l'esquema -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            
            <!-- Pots ajustar el nivell de log (FINE és bastant detallat) -->
            <property name="eclipselink.logging.level" value="INFO"/> 
            
            <!-- Propietat recomanada per a aplicacions web -->
            <property name="eclipselink.weaving" value="false"/> 
        </properties>
    </persistence-unit>
</persistence>
