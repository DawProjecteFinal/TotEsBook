<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/beans_4_0.xsd"
    bean-discovery-mode="annotated"> 
           <!-- 
              'annotated' significa: Només processa classes amb anotacions CDI explícites. 
              Això ja ajuda a ignorar moltes classes de llibreries.
           -->

        <scan>
            <!-- 
                Excloem explícitament TOTS els paquets de Spring Framework.
                Això evita que Weld intenti processar les seves anotacions.
                El '**' significa 'aquest paquet i tots els seus subpaquets'.
            -->
            <exclude name="org.springframework.**"/>
            
            <!-- 
                (Opcionalment, pots excloure altres llibreries si donen problemes)
                <exclude name="org.hibernate.**"/> 
            -->
        </scan>
</beans>
    